citHeader("To cite earlywarnings in publications use:")

year <- sub("-.*", "", meta$Date)
note <- "http://cran.r-project.org/web/packages/earlywarnings/index.html"

bibentry(
  bibtype = "Manual",
  title = "R Early Warning Signals Toolbox",,
  author = c(
	 	 person(given ="Vasilis", family = "Dakos", email = "vasilis.dakos@gmail.com"),
	 	 person(given ="Leo", family = "Lahti", email = "leo.lahti@iki.fi")
	 	 ),
  year = year,
  note = note,
  url = "https://github.com/earlywarningtoolbox/earlywarnings-R"
)


citEntry(
  entry = "article",
  textVersion = paste("Vasilis Dakos et al. ",
      "Methods for detecting early warnings of critical transitions in time series illustrated using simulated ecological data.",
      "PLoS One 7:e41010, 2012.",
      sep=""),
  title = "Methods for detecting early warnings of critical transitions in time series illustrated using simulated ecological data",
  author = c(
	 	person(given = "Vasilis", family="Dakos", email = "vasilis.dakos@gmail.com"),
		person(given = "Stephen R.", family="Carpenter"),
		person(given = "William A.", family="Brock"),
		person(given = "Aaron M.", family="Ellison"),
		person(given = "Vishwesha", family="Guttal"),
		person(given = "Anthony R.", family="Ives"),
		person(given = "Sonia", family="K\'{e}fi"),
		person(given = "Valerie", family="Livina"),
		person(given = "David A.", family="Seekell"),
		person(given = "Egbert H.", family="van Nes"),
		person(given = "Marten", family="Scheffer")
	 	  ),
	 journal = "PLoS ONE",
	 volume = "7",
	 pages = "e41010",
	 year = "2012",
   url  = "http://journals.plos.org/plosone/article?id=10.1371/journal.pone.0041010"
)
